<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="360dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="350dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/background2"
            android:id="@+id/FoodImage"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:weightSum="1.4"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:layout_gravity="center"
                        android:src="@drawable/vegicon"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/FoodName"
                        android:layout_width="0dp"
                        android:layout_weight="0.9"
                        android:padding="3dp"
                        android:layout_height="match_parent"
                        android:text="Shai panner khota masla for large name test"
                        android:gravity="fill"
                        android:textStyle="bold"
                        android:textColor="#000"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:layout_gravity="center"
                        android:src="@drawable/rupay"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/FoodPrice"
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:padding="3dp"
                        android:layout_height="match_parent"
                        android:text="220/-"
                        android:gravity="fill"
                        android:textStyle="bold"
                        android:textColor="#000"
                        />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_height="40dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.25"
                            android:layout_height="match_parent" />
                    <ToggleButton
                        android:id="@+id/addToFavouirte"
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textOff=""
                        style="?android:attr/borderlessButtonStyle"
                        android:background="@drawable/addtofavourite_check"
                        android:textOn=""
                        />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:layout_height="match_parent" />
                    <ToggleButton
                        android:textOff="ADD TO CART"
                        android:textOn="REMOVE"
                        android:id="@+id/addToCart"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textColor="#ffff"
                        android:background="@drawable/addtocart_check"
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="35dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
            </LinearLayout>
</android.support.v7.widget.CardView>