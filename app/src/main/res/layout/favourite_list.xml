<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    card_view:cardCornerRadius="10dp"
    android:padding="10dp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="180dp"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/background2"
            android:id="@+id/foodImage"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:id="@+id/close"
                android:padding="5dp"
                android:src="@drawable/close"
                />
            <TextView
                android:id="@+id/foodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"
                android:drawableLeft="@drawable/iconsize"
                android:textSize="17sp"
                android:drawablePadding="10dp"
                android:gravity=""
                android:padding="10dp"
                android:textColor="#000"
                />
            <TextView
                android:drawableLeft="@drawable/rupeeiconsize"
                android:drawablePadding="10dp"
                android:id="@+id/foodPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:gravity=""
                android:textSize="17sp"
                android:padding="10dp"
                android:textColor="#000"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent"
                >
                <ToggleButton
                    android:id="@+id/addToFavouirte"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textOff=""
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/addtofavourite_check"
                    android:textOn=""
                    />
                <ToggleButton
                    android:textOff="REORDER"
                    android:textOn="REMOVE"
                    android:id="@+id/addToCart"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ffff"
                    android:background="@drawable/addtocart_check"
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="30dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
